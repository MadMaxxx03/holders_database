<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Classes.Holder" table="HOLDER">
        <id name="hId" type="java.lang.Integer">
            <column name="HID" not-null="true"/>
        </id>
        <property name="name" type="string">
            <column name="NAME" length="50" not-null="true"/>
        </property>
        <property name="password" type="string">
            <column name="PASSWORD" length="50" not-null="true"/>
        </property>
        <property name="role" type="boolean">
            <column name="ROLE" not-null="true"/>
        </property>
        
        <set name="passedTests" lazy="false">
            <key>
                <column name="hId" />
            </key>
            <one-to-many class="Classes.PassedTest"/>
        </set>
        <set name="tests" lazy="false">
            <key>
                <column name="hId"/>
            </key>
            <one-to-many class="Classes.Test"/>
        </set>
    </class>
</hibernate-mapping>