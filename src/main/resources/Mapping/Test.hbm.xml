<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Classes.Test" table="TEST">
        <id name="tId" type="java.lang.Integer">
            <column name="TID" not-null="true"/>
        </id>

        <many-to-one name="holder" class="Classes.Holder" column="hId"/>

        <set name="questions" lazy="false">
            <key>
                <column name="tId"/>
            </key>
            <one-to-many class="Classes.Question"/>
        </set>
        <set name="passedTests" lazy="false">
            <key>
                <column name="tId"/>
            </key>
            <one-to-many class="Classes.PassedTest"/>
        </set>

    </class>
</hibernate-mapping>